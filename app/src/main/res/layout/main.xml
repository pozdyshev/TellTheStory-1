<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="italic"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Игрок нажимает на кнопку ПОКАЗАТЬ ВОПРОС и из базы данных выбирается вопрос в случайном порядке. Вопросы включают в себя темы из детства, настоящего времени и будущего. Если игрок не может ответить на вопрос, то он получает НАКАЗАНИЕ." />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Показать вопрос"
        android:id="@+id/button"
        android:onClick="onMyButtonClick"
        android:background="#ffcfffd0"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Наказание"
        android:id="@+id/button2"
        android:onClick="onMyButtonClickNakaz"
        android:background="#ffff7800"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

</RelativeLayout>
